<div class="row">

	<div class="col-md-4">
		<%= image_tag @book.photo.url(:book_show), class: "book-show" %>
	</div>

	<div class="col-md-8">

		<div class="book-info">

			<h2><%= @book.title %></h2>
			<h3>by <%= @book.author %></h3>
			<h2 class="avg-rating">Average Rating: <%= @book.reviews.average(:rating) %> / 5</h2>
			<span class="number-of-reviews">Based on <%= @book.reviews.count %> reviews</span>
			<h4><%= @book.category.name %></h3>
				<p><%= @book.description %></p>

			</div>
		</div>
	</div>

	<div class="row">

		<div class="col-md-4">

			<div class="reviews">

				<!-- Where the reviews/ratings will go -->
				<h1>Reviews</h1>
				<%= render @book.reviews %>

				<div>
					<br><%= link_to "Add Review", new_book_review_path(@book), class: "btn-custom" %>
				</div>

			</div>

		</div>

	</div>

<br><br>
	<%= link_to "Back", root_path %>
	<% if user_signed_in? %>

	<% if @book.user_id == current_user.id %>

	<%= link_to "Edit", edit_book_path(@book) %>
	<%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"} %>
	<% end %>

	<% end %>

	<script>
		$('.review-rating').raty({
			readOnly: true,
			score: function() {
				return $(this).attr('data-score');
			},
			path: '/assets/'
		});
	</script>
